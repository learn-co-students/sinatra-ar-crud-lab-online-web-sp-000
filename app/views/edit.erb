<form action="/articles/<%=@edit_article.id%>" method="post">
    <input id="hidden" type="hidden" name="_method" value="PATCH">
    <label for="title">Title: </label>
    <input type="text" id="title" name="title" value="<%=@edit_article.title%>"><br><br>
    <label for="content">Content: </label><br>
    <textarea name="content" id="content" cols="30" rows="5"><%=@edit_article.content%></textarea><br><br>
    <input type="submit" value="submit">
</form>