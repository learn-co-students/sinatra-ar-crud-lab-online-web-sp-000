<form action="/articles/<%=@edit_article.id%>" method="post">
  <h1>Edit article with ID of <%=@edit_article.id%></h1>
  <p>Existing title: <%=@edit_article.title%></p>
  <p>Existing content: <%=@edit_article.content%></p>
  <input id="hidden" type="hidden" name="_method" value="PATCH">
  <p><label for="title">New Title: </label>
  <input type="text" name="title"></p>
  <p><label for="title">New Content: </label>
  <input type="text" name="content"></p>
  <input type="submit" value="submit">
</form>
