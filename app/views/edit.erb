<form action="/articles/<%= params[:id] %>" method="post">
    <input id="hidden" type="hidden" name="_method" value="patch">
    New Article Title: <input type="text" name="title" value="<%= @article.title %>">
    New Article Content: <input type="text" name="content" value="<%= @article.content %>">
    <button type="submit" value="submit">Submit</button>
</form>