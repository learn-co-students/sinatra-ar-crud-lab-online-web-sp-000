<%= @article.title %>
<%= @article.content %> 
<form action="/articles/<%= @article.id %>" method="POST">
    <input id="hidden" type="hidden" name="_method" value="PATCH">
    <label for="title">New Title: </label><input type="text" id="title" name="title">
    <label for="content">New Content: </label><input type="text" id="content" name="content">
    <input type='submit' id='submit' value='submit'>
</form>