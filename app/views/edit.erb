<form method="POST" action="/articles/:id">
  <p><label for="title">Title: </label><input type="text" name="title" id="title" value="<%= article.title %>"></p>
  <p><label for="content">Content: </label><textarea id="content" name="content" value="<%= article.content %"></p>
  <input id="hidden" type="hidden" name="_method" value="PATCH">
  <input type="submit" id="hidden">
</form>
