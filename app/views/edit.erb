<form action="/articles/<%= @edit_article.id %>" method="POST">
    <input id="hidden" type="hidden" name="_method" value="PATCH">
    <label>Title:</label>
    <input type="text" id="title" name="title" value="<%= @edit_article.title %>"/>
    <br>
    <label>Content:</label>
    <input type="text" id="content" name="content" value="<%= @edit_article.content%>"/>
    <br>
    <input type="submit" value="submit" id="submit"/>
</form>