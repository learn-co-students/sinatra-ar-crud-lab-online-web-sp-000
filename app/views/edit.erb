<h1>Edit An Article!</h1>
<form method="POST" action="/articles/<%= @article.id %>">
    <input id="hidden" type="hidden" name="_method" value="PATCH">
    <h2>Article Title: <input type="text" name="article[title]" id="title" value="<%= @article.title %>"></h2>
    <p>Article Content: <input type="text" name="article[content]" id="content" value="<%= @article.content %>"></p>
    <input type="submit">
</form>