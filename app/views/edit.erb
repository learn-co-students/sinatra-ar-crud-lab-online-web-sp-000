<form method="POST" action="/articles/<%= @article.id %>">
  <input id="hidden" type="hidden" name="_method" value="PATCH">
  <input type="text" id="title" name="article[title]" value="<%= @article.title %>" />
  <textarea type="text" id="content" name="article[content]" value="<%= @article.content %>">
  </textarea>
  <input type="submit" />
</form>
