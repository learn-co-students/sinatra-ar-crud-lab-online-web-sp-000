<h1><%= @article.title %></h1>

<p><%= @article.content %></p>

<form action="/articles/<%= @article.id %>" method="POST"> 
    <input id='hidden' type='hidden' name='_method' value='patch'>
    <p>Title: <input type="text" name="title" id="article_title"></p>
    <p>Content: <input type="textarea" name="content" id="article_content"></p>
    <input type="submit" id="submit">
    
</form>
