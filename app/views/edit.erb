<form action='/articles/<%=@article.id%>' method='POST'>
<input id='hidden' type='hidden' name='_method' value='PATCH'>
<p>Title: <input id='title' type='text' name='title' value='<%=@article.title%>'></p>
<p>Content: <textarea id='content' name='content' value='<%=@article.content%>'><%=@article.content%></textarea></p>
<button id='submit' type='submit'>Submit</button>
</form>