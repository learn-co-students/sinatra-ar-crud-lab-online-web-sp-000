<form method="post" action="/articles/<%= @article.id %>">
  <input type="hidden" value="patch" name="_method">
  <h2><label for="title">Title: </label>
  <input type="text" name="title" id="title" value="<%= @article.title %>"></h2>
  
  <p><label for="content">Content: </label>
  <textarea type="text" name="content" id="content"><%= @article.content %></textarea></p>
  
  <input type="submit" name="submit">
</form>