<h1><%= @article.title %></h1>
<p><%= @article.content %></p>

<form method="POST" action="/articles/<%= @article.id %>">
  <input type="hidden" id="hidden" name="_method" value="PATCH">
  New Title: <input type="text" name="title">
  New Content: <input type="text" name="content">
  <input type="submit" id="submit">
</form>