<h1>Edit Article</h1>

<h2><%= @article.title %></h2>
<p><%= @article.content %></h2>

<form action="/articles/<%= @article.id %>" method="POST">
  <input type="hidden" name="_method" id="hidden" value="PATCH">
  <div>
    <label for="title">Title: </label>
    <input type="text" name="article[title]" id="title" value="<%= @article.title %>">
  </div>
  <div>
    <label for="content">Content: </label>
    <input type="text" name="article[content]" id="content" value="<%= @article.content %>">
  </div>

  <br>

  <button type="submit" id="submit">Submit</button>
</form>