<h1>Articles</h1>

<% @articles.each do |article| %>
  <h2>Title: <%= article.title %></h2>
  <p><%= article.content %></p>
  <form action="/articles/<%= article.id %>" method="get">
    <input type="submit" value="Show Article">
  </form>
  <form action="/articles/<%= article.id %>/edit" method="get">
    <input type="submit" value="Edit Article">
  </form>
 <% end  %>



  <div>
    <form action="/articles/new" method="get">
      <input type="submit" value="Create New Article">
    </form>
  </div>